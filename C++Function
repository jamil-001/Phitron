//Dynamically Allocate Array
#include<bits/stdc++.h>
using namespace std;
int* sortIt(int n){
    int* arr= new int[n];
    for(int i=0;i<n;i++){
        cin >> arr[i];
    }
    sort(arr,arr+n,greater<int>());
    return arr;
}
int main(){
    int n;
    cin >> n;
    int* arr =sortIt(n);
    for(int i=0;i<n;i++){
        cout <<arr[i]<<" ";
    }
    return 0;
}
